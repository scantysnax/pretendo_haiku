
SHELL = /bin/sh

# suffix Definitions
.SUFFIXES:                	# Delete the default suffixes
.SUFFIXES: .cpp .o .h .asm 	# Define our suffix list
	
.cpp.o:
	@echo compiling $< ...
	@$(CXX) $(CXXFLAGS) $(DEFINES) -c $< -o $@ 1>/dev/null
		
.asm.o:
	@echo assembling $< ...
	@$(ASM) $(ASMFLAGS) $(DEFINES) $< -o $@ 1>/dev/null
		
ASM    := yasm
CXX    := g++
LD     := g++
RM     := rm -f
ED     := ed
RES	   := xres
STRIP  := strip

